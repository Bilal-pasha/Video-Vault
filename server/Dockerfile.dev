# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install wget for healthcheck
RUN apk add --no-cache wget

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Expose port
EXPOSE 8000

# Default command (can be overridden in docker-compose)
CMD ["npm", "run", "start:dev"]

