FROM golang:1.21-alpine

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache git

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Install air for hot reload
RUN go install github.com/cosmtrek/air@latest

# Expose port
EXPOSE 8000

# Run with air for hot reload
CMD ["air", "-c", ".air.toml"]
